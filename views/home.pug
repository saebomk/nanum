extends layouts/main
include mixins/videoBlock

block content
    .home__wrapper
        .home-title
            h1.home-videos__title Family Holidays 2020          
            h6.home-videos__views=`${videos.length} Videos`
        .home__toolbar
            .home-search
                form(action=routes.search, method="get")
                    input(type="text", placeholder="Search by Video Name", name="name")
            .home-upload
                a(href=`/videos${routes.upload}`)
                    button Upload Your Message
        .home-videos
            each video in videos
                +videoBlock({
                    id: video.id,
                    title: video.title,
                    views: video.views,
                    videoFile:video.fileUrl,
                })